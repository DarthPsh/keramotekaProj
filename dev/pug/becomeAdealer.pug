//- include helpers/mixins
extends layout/main
block variables
    -var title = 'ЗАЯВКА СТАТЬ ДИЛЕРОМ'
block content
    .calculation-popup-wrap.become-dealer__popup
        .calculation-popup-overlay
            .calculation-popup
                .calculation-popup__close
                    .calculation-popup__close-line.calculation-popup__close-line_top
                    .calculation-popup__close-line.calculation-popup__close-line_bot
                .calculation-popup__title Заявка на сотрудничество
                .calculation-popup__desc
                form.calculation-popup__form.ajax-form
                    .calculation-popup__head 
                        label.calculation-popup__name 
                            span.calculation-popup__info-title ВАШЕ ИМЯ
                            input(type="text" placeholder="Например Иван Иванов")
                    .calculation-popup__info
                        label.calculation-popup__info-tel.calculation-popup__info-item 
                            span.calculation-popup__info-title ТЕЛЕФОН
                            input(type="tel" placeholder="+7 (___) ___-__-__")
                        label.calculation-popup__info-mail.calculation-popup__info-item 
                            span.calculation-popup__info-title E-MAIL
                            input(type="email" placeholder="yourmail@mail.com")
                    span.calculation-popup__info-title ВИД ДЕЯТЕЛЬНОСТИ
                    .become-dealer__activity
                        .become-dealer__activity-checks
                            label.become-dealer__activity-check
                                input(type="radio" name="type-of-activity") 
                                | Торговая компания
                            label.become-dealer__activity-check
                                input(type="radio" name="type-of-activity") 
                                | Дизайнер / архитектор
                            label.become-dealer__activity-check
                                input(type="radio" name="type-of-activity") 
                                | Строительная компания / девелопер
                        .become-dealer__activity-info Заявка будет доставлена в дилерский отдел — для определения возможности предоставления статуса дилера. Затем мы свяжемся с вами и расскажем об условиях сотрудничества.
                    .become-dealer__entity
                        label.become-dealer__entity-item
                            span.calculation-popup__info-title НАЗВАНИЕ КОМПАНИИ / ЮР. ЛИЦА
                            input(type="text")
                        label.become-dealer__entity-item
                            span.calculation-popup__info-title ИНН ЮР. ЛИЦА / ИП
                            .become-dealer__entity-checks
                                .header-filter-list-item
                                    .header-filter-list-item__title Выберите тип
                                        figure.header-filter-list-item__icon.header-top__more
                                            +icon('expand_more_brs')
                                    .filter-list-count
                                    ul.header-drop-menu.header-filter-list-drop-menu
                                        li
                                            label 
                                                input(type="radio" name="inn")
                                                | Вариант 1
                                        li
                                            label
                                                input(type="radio" name="inn")
                                                | Вариант 2
                        label.become-dealer__entity-item
                            span.calculation-popup__info-title ГОРОД
                            input(type="text")
                        label.become-dealer__entity-item
                            span.calculation-popup__info-title ТИП ТОРГОВОЙ КОМПАНИИ
                            .become-dealer__entity-checks
                                .header-filter-list-item
                                    .header-filter-list-item__title Выберите тип
                                        figure.header-filter-list-item__icon.header-top__more
                                            +icon('expand_more_brs')
                                    .filter-list-count
                                    ul.header-drop-menu.header-filter-list-drop-menu
                                        li
                                            label 
                                                input(type="radio" name="type-of-trading-company")
                                                | Интернет-магазин
                                        li
                                            label
                                                input(type="radio" name="type-of-trading-company")
                                                | Шоурум / торговая точка
                    label.calculation-popup__info-message.become-dealer__message.become-dealer__message_small
                        span.calculation-popup__info-title АССОРТИМЕНТ
                        textarea(placeholder="Примерный состав / ценовой сегмент вашего текущего ассортимента по направлению «керамическая плитка»")
                    label.calculation-popup__info-message.become-dealer__message.become-dealer__message_small
                        span.calculation-popup__info-title ПОСТАВЩИКИ
                        textarea(placeholder="Основные поставщики, с которыми вы уже сотрудничаете")
                    label.calculation-popup__info-message 
                        span.calculation-popup__info-title СОПРОВОДИТЕЛЬНОЕ ПИСЬМО
                        textarea(placeholder="Расскажите кратко о деятельности вашей компании. В случае необходимости, мы запросим у вас дополнительную информацию.")
                    .calculation-popup__footer
                        .calculation-popup__footer-file
                            label.calculation-popup__footer-btn.calculation-popup__footer-download ПРИКРЕПИТЬ ФАЙЛ (<4 МБ)
                                input(type="file")
                            .calculation-popup__footer-loaded
                                +icon('close_brs')
                                span.file-name
                        .calculation-popup__footer-end
                            button(type="submit").calculation-popup__footer-btn.calculation-popup__footer-submit ОТПРАВИТЬ ЗАЯВКУ
                            label.calculation-popup__footer-policy
                                input(type="checkbox")
                                span Я принимаю 
                                    a(href="/agreement.html") Пользовательское соглашение 
                                    | и даю свое согласие на обработку моих персональных данных 