                .threed-form
                    .calculation-popup__title Заказать консультацию по услуге
                    .calculation-popup__desc
                    form.calculation-popup__form.ajax-form
                        label.calculation-popup__name.calculation-popup__info-item 
                            span.calculation-popup__info-title ВАШЕ ИМЯ
                            input(type="text" placeholder="Например Иван Иванов")
                        label.calculation-popup__info-mail.calculation-popup__info-item 
                            span.calculation-popup__info-title E-MAIL
                            input(type="email" placeholder="yourmail@mail.com")
                        label.calculation-popup__info-tel.calculation-popup__info-item 
                            span.calculation-popup__info-title ТЕЛЕФОН
                            input(type="tel" placeholder="+7 (___) ___-__-__")
                        label.calculation-popup__info-message 
